<nav>
  <div class="appbar">
    <%= link_to user_session_path do %>
      <i class="fas fa-arrow-left"></i>
    <% end %>
    <h3>Register</h3>
    <a href="transactions.html">Next</a>
  </div>
</nav>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-actions">
    <%= f.input :name,
                required: true,
                autofocus: true,
                label: false,
                placeholder: 'Full Name',
                input_html: { class: 'input_field'}%>

    <%= f.input :email,
                required: true,
                autofocus: true,
                label: false,
                placeholder: 'Email',
                input_html: { autocomplete: "email", class: 'input_field'}%>
    <%= f.input :password,
                required: true,
                label: false,
                placeholder: 'Password',
                input_html: { autocomplete: "new-password", class: 'input_field' } %>
    <%= f.input :password_confirmation,
                required: true,
                placeholder: 'Confirm Password',
                label: false,
                input_html: { autocomplete: "new-password", class: 'input_field' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: 'submit-btn' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
